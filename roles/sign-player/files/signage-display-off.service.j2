[Unit]
Description=Turn off display for ansible-digital-signage
After=graphical.target systemd-user-sessions.service signage-startx.service
Type=forking

[Service]
User={{ signage_user }}
WorkingDirectory=~

PAMName=login

Environment=DISPLAY=:0

StandardOutput=journal
ExecStart=/usr/bin/xrandr --output {{ display_connection }} --off
Restart=no